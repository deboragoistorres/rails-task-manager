<%= form_for(@task) do |f| %>
  <div class="form-group p-3 m-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group p-3 m-3">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-secondary m-3' %>
<% end %>
